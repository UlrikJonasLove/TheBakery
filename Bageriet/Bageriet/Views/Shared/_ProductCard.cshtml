@model Product

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="caption">
        <h2>@Model.Category.CategoryName</h2>
        <h3>
            <a 
               asp-controller="Product" 
               asp-action="Details" 
               asp-route-id="@Model.ProductId">@Model.Name</a>
        </h3>
        <img class="img" src="@Model.ImageThumbnailUrl" width="200" height="200" />
        <p>@Model.Description</p>
    </div>
    <div class="addToCart">
        <p class="button">
            <a class="btn btn-primary"
               asp-controller="ShoppingCart"
               asp-action="AddToShoppingCart"
               asp-route-productId="@Model.ProductId">Lägg till i varukorgen</a>
        </p>
    </div>
</div>